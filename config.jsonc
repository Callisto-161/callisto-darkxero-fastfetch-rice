{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "source": "~/.config/fastfetch/logo.txt",
        "type": "file",
	"height": 15,
	"width": 30,
        "padding": {
            "top": 1,
            "left": 3,
	    "right": 3 
	}
    },
    "modules": [
        "break",
        {
            "type": "custom",
            "format": "\u001b[33m┌─────────────────────────┤Hardware├─────────────────────────┐"
        },
        {
            "type": "host",
            "key": " PC",
            "keyColor": "\u001b[91m"
        },
        {
            "type": "cpu",
            "key": "├ ",
            "showPeCoreCount": true,
            "keyColor": "\u001b[91m"
        },
        {
            "type": "gpu",
            "key": "├ ",
            "keyColor": "\u001b[91m"
        },
        {
            "type": "memory",
            "key": "├ ",
            "keyColor": "\u001b[91m"
        },
        {
            "type": "disk",
            "key": "├󰋊 ",
            "keyColor": "\u001b[91m"
        },
        {
            "type": "battery",
            "key": "└ ",
            "keyColor": "\u001b[91m"
        },
        {
            "type": "custom",
            "format": "\u001b[33m└────────────────────────────────────────────────────────────┘"
        },
        "break",
        {
            "type": "custom",
            "format": "\u001b[33m┌─────────────────────────┤Software├─────────────────────────┐"
        },
        {
            "type": "os",
            "key": " OS",
            "keyColor": "92"
        },
        {
            "type": "kernel",
            "key": "├ ",
            "keyColor": "92"
        },
        {
            "type": "packages",
            "key": "├󰏖 ",
            "keyColor": "92"
        },
        {
            "type": "shell",
            "key": "└ ",
            "keyColor": "92"
        },
        "break",
        {
            "type": "de",
            "key": "󰍹 DE",
            "keyColor": "\u001b[96m"
        },
        {
            "type": "lm",
            "key": "├󱄄 ",
            "keyColor": "\u001b[96m"
        },
        {
            "type": "wm",
            "key": "├󱄄 ",
            "keyColor": "\u001b[96m"
        },
        {
            "type": "gpu",
            "key": "├ ",
            "format": "{3}",
            "keyColor": "\u001b[96m"
        },
	{
            "type": "wmtheme",
            "key": "└󰉼 ",
            "keyColor": "\u001b[96m"
        },
        {
            "type": "custom",
            "format": "\u001b[33m└────────────────────────────────────────────────────────────┘"
        },
        "break",
        {
            "type": "custom",
            "format": "\u001b[33m┌───────────────────────┤Uptime / Age├───────────────────────┐"
        },
        {
            "type": "command",
            "key": "  OS Age ",
            "keyColor": "\u001b[95m",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
        },
        {
            "type": "uptime",
            "key": "  Uptime ",
            "keyColor": "\u001b[95m"
        },
        {
            "type": "datetime",
            "key": "  Date & Time ",
            "keyColor": "\u001b[95m"
        },
        {
            "type": "custom",
            "format": "\u001b[33m└────────────────────────────────────────────────────────────┘"
        },
        "break",
        {
            "type": "colors"
        },
        "break"
    ]
}
